{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Partners Stores API Response",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "error"]
    },
    "data": {
      "type": "object",
      "properties": {
        "title": {"type": "string"},
        "stores": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "name": {"type": "string"},
              "description": {"type": "string"},
              "external_link": {"type": "string", "format": "uri"}
            },
            "required": ["id", "name", "description", "external_link"]
          }
        }
      },
      "required": ["title", "stores"]
    }
  },
  "required": ["status", "data"]
}
